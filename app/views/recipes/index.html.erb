<h1 class='text-center mt-5'>Recipes</h1>

<div class="container mt-5">
  <div class="text-right mb-3 d-flex justify-content-end align-content-center">
    <%= link_to "Add New Recipe", new_recipe_path, class: "btn btn-success" %>
  </div>

  <% if @recipes.any? %>
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @recipes.each do |recipe| %>
                    <tr>
                      <td><%= recipe.name %></td>
                      <td>
                        <%= recipe.description %>
                      </td>
                      <td class="text-center">
                        <% if recipe.public || current_user == recipe.user %>
                          <%= link_to "Details", recipe, class: "btn btn-primary btn-sm" %>
                        <% end %>
                      </td>
                      <td class="text-center">
                        <%= button_to "Remove", recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
                      </td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
    </div>
  <% else %>
    <div class="text-center" data-testid="no-recipes-message">
      <p>No recipes found.</p>
    </div>
  <% end %>
</div>
