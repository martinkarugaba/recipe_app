<h1 class='text-center mt-5'>Edit Ingredient</h1>

<div class='col-md-12 mt-5 d-flex justify-content-center align-items-center'>
  <%= form_with(model: [@recipe, @recipe_food], local: true, class: "form") do |form| %>
    <div class="form-group">
      <%= form.label :food_id %>
      <%= form.collection_select :food_id, Food.all, :id, :name, {}, {class: "form-control"} %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: "form-control" %>
    </div>

    <div class="form-actions mt-4">
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>