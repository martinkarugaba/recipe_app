<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-lg-10">
      <div class="text-center mb-4 mt-3">
        <%= link_to 'Add new food', new_food_path, class: "btn btn-primary" %>
      </div>

      <% if @foods.any? %>
        <div class="card-body">
          <%= render partial: 'shared/foods_table', locals: { foods: @foods } %>
        </div>
      <% else %>
        <div class="text-center" data-testid="no-foods-message">
          <p>No foods available.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
